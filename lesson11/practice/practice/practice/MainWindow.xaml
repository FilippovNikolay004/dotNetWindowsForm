<Window x:Class="practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="800">
    <StackPanel Margin="10">
        <Label>Red</Label>
        <Slider ValueChanged="Slider_ValueChanged" Name="red"></Slider>
        <Label>Green</Label>
        <Slider ValueChanged="Slider_ValueChanged" Name="green"></Slider>
        <Label>Blue</Label>
        <Slider ValueChanged="Slider_ValueChanged" Name="blue"></Slider>
    </StackPanel>
</Window>
